{
    "manifest_version": 2,


    "name": "Delight",
    "description": "This is Delight!",
    "version": "1.0",

    "permissions": [
        "tabs", "http://*/*", "https://*/*"
    ],

    "content_scripts":[
        {
            "js":[
                "libraries/jquery-2.1.1.js",
                "libraries/lodash.js",
                "background.js"
            ],
            "matches": ["http://*/*", "https://*/*"]
        }   
    ],

    "browser_action": {
        "default_title": "Delight this page!",
        "name": "Click to get URL"
        // "default_icon": "icon.png",
        // "default_popup": "popup.html"
    }

}