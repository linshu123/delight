{
    "manifest_version": 2,


    "name": "Delight",
    "description": "This is Delight!",
    "version": "1.0",

    "permissions": [
        "tabs", "http://*/*", "https://*/*"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "browser_action": {
        "default_title": "Delight this page!",
        "name": "Click to get URL"
        // "default_icon": "icon.png",
        // "default_popup": "popup.html"
    }

}